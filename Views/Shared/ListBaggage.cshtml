@model IEnumerable<Airport_IS.Models.Entities.Baggage>

@{
    ViewBag.Title = "ListBaggage";
}

<h2>Baggage list</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Baggage number")
        </th>
        <th>
            @Html.DisplayName("Baggage weight")
        </th>
        <th>
            @Html.DisplayName("Ticket number")
        </th>
        <th>
            @Html.DisplayName("First name")
        </th>
        <th>
            @Html.DisplayName("Last name")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicketSaleId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicketSale.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicketSale.LastName)
        </td>
    </tr>
}

</table>
