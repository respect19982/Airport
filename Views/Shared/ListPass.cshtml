@model IEnumerable<Airport_IS.Models.Entities.TicketSale>

@{
    ViewBag.Title = "ListPass";
}

<h2>Passenger list</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Ticket number")
        </th>
        <th>
            @Html.DisplayName("First name:")
        </th>
        <th>
            @Html.DisplayName("Last name:")
        </th>
        <th>
            @Html.DisplayName("Passport series")
        </th>
        <th>
            @Html.DisplayName("Passport number")
        </th>
        <th>
            @Html.DisplayName("Age")
        </th>
        <th>
            @Html.DisplayName("Phone")
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th>
            @Html.DisplayName("Place number")
        </th>
        <th>
            @Html.DisplayName("Ticket price")
        </th>
        <th>
            @Html.DisplayName("Class")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PassportSeries)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PassportNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlaceNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicketPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Class)
        </td>
    </tr>
}

</table>
